@page "/challenges"
@inject IChallengeService ChallengeService
@inject IProgressService ProgressService
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Challenges - Detective Roslyn IO</PageTitle>

<h1>Challenges</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <label class="form-label">Filter by Category:</label>
        <select class="form-select" @onchange="OnCategoryFilterChanged">
            <option value="">All Categories</option>
            <option value="@((int)ChallengeCategory.Analyzer)">Analyzer</option>
            <option value="@((int)ChallengeCategory.CodeFix)">Code Fix</option>
            <option value="@((int)ChallengeCategory.SourceGenerator)">Source Generator</option>
        </select>
    </div>
    <div class="col-md-4">
        <label class="form-label">Filter by Difficulty:</label>
        <select class="form-select" @onchange="OnDifficultyFilterChanged">
            <option value="">All Difficulties</option>
            <option value="@((int)DifficultyLevel.Beginner)">Beginner</option>
            <option value="@((int)DifficultyLevel.Intermediate)">Intermediate</option>
            <option value="@((int)DifficultyLevel.Advanced)">Advanced</option>
        </select>
    </div>
</div>

@if (filteredChallenges == null)
{
    <p>Loading challenges...</p>
}
else if (!filteredChallenges.Any())
{
    <div class="alert alert-info">No challenges found matching your criteria.</div>
}
else
{
    <div class="row">
        @foreach (var challenge in filteredChallenges)
        {
            var isCompleted = completedChallengeIds.Contains(challenge.Id);
            <div class="col-md-6 mb-3">
                <ChallengeCard Challenge="challenge" IsCompleted="isCompleted" />
            </div>
        }
    </div>
}

@code {
    private List<Challenge>? allChallenges;
    private List<Challenge>? filteredChallenges;
    private HashSet<int> completedChallengeIds = new();
    private ChallengeCategory? categoryFilter;
    private DifficultyLevel? difficultyFilter;

    protected override async Task OnInitializedAsync()
    {
        allChallenges = await ChallengeService.GetActiveChallengesAsync();
        filteredChallenges = allChallenges;

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (userId != null)
            {
                var progress = await ProgressService.GetUserProgressAsync(userId);
                completedChallengeIds = progress.Challenges
                    .Where(c => c.IsCompleted)
                    .Select(c => c.Challenge.Id)
                    .ToHashSet();
            }
        }
    }

    private void OnCategoryFilterChanged(ChangeEventArgs e)
    {
        if (string.IsNullOrEmpty(e.Value?.ToString()))
        {
            categoryFilter = null;
        }
        else
        {
            categoryFilter = (ChallengeCategory)int.Parse(e.Value.ToString()!);
        }
        ApplyFilters();
    }

    private void OnDifficultyFilterChanged(ChangeEventArgs e)
    {
        if (string.IsNullOrEmpty(e.Value?.ToString()))
        {
            difficultyFilter = null;
        }
        else
        {
            difficultyFilter = (DifficultyLevel)int.Parse(e.Value.ToString()!);
        }
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredChallenges = allChallenges;

        if (categoryFilter.HasValue)
        {
            filteredChallenges = filteredChallenges?
                .Where(c => c.Category == categoryFilter.Value)
                .ToList();
        }

        if (difficultyFilter.HasValue)
        {
            filteredChallenges = filteredChallenges?
                .Where(c => c.Difficulty == difficultyFilter.Value)
                .ToList();
        }
    }
}
