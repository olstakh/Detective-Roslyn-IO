@page "/detective/case/{id:int}"
@attribute [Authorize]
@rendermode InteractiveServer
@layout DetectiveLayout
@using DetectiveRoslynIO.Services
@using DetectiveRoslynIO.Data.Entities
@using DetectiveRoslynIO.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject IChallengeService ChallengeService
@inject IUnlockService UnlockService
@inject ISubmissionService SubmissionService
@inject IProgressService ProgressService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>@(challenge?.Title ?? "Case") - Detective Roslyn IO</PageTitle>

@if (challenge == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading case...</span>
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <a href="/detective/inbox" class="btn btn-outline-secondary btn-sm">&larr; Back to Inbox</a>
    </div>

    <div class="case-detail-card">
        <div class="case-detail-header">
            <div>
                <div class="case-badge-large">Case #@challenge.SequenceNumber</div>
                <h1 class="case-detail-title">@challenge.Title</h1>
                <div class="mt-2">
                    <DifficultyBadge Difficulty="challenge.Difficulty" />
                    <CategoryBadge Category="challenge.Category" />
                </div>
            </div>
            @if (progress != null && progress.IsCompleted)
            {
                <div>
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
            }
        </div>

        <div class="case-detail-body">
            <section class="mb-4">
                <h4><i class="bi bi-file-text"></i> Case Description</h4>
                <p class="case-description">@challenge.Description</p>
            </section>

            <section class="mb-4">
                <h4><i class="bi bi-list-check"></i> Investigation Steps</h4>
                <div class="case-instructions">
                    @challenge.Instructions
                </div>
            </section>

            <section class="mb-4">
                <h4><i class="bi bi-github"></i> Evidence Repository</h4>
                <a href="@challenge.TargetRepoUrl" target="_blank" class="btn btn-detective">
                    <i class="bi bi-box-arrow-up-right"></i> Clone Repository
                </a>
            </section>

            @if (!string.IsNullOrEmpty(challenge.RoslynDocsUrl))
            {
                <section class="mb-4">
                    <h4><i class="bi bi-book"></i> Reference Materials</h4>
                    <a href="@challenge.RoslynDocsUrl" target="_blank" class="text-decoration-none">
                        Roslyn SDK Documentation <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </section>
            }
        </div>
    </div>

    @if (challenge.Hints.Any())
    {
        <div class="hints-section mt-4">
            <HintAccordion Hints="challenge.Hints.ToList()" OnHintViewed="OnHintViewed" />
        </div>
    }

    @if (progress != null && progress.IsCompleted)
    {
        <div class="alert alert-success mt-4">
            <i class="bi bi-trophy-fill"></i>
            <strong>Case Closed!</strong> You solved this case on @progress.CompletedAt?.ToString("MMM dd, yyyy").
            Total attempts: @progress.TotalAttempts | Hints used: @progress.HintsUsed
        </div>
    }

    <div class="submission-section mt-4">
        <h4><i class="bi bi-clipboard-check"></i> Submit Your Findings</h4>

        @if (!string.IsNullOrEmpty(submissionMessage))
        {
            <div class="alert @(submissionResult?.IsCorrect == true ? "alert-success" : "alert-danger")">
                @submissionMessage
                @if (submissionResult?.IsCorrect == true && submissionResult.IsFirstCorrectSubmission)
                {
                    <div class="mt-2">
                        <i class="bi bi-star-fill"></i> <strong>First Solve!</strong> Excellent detective work!
                    </div>
                }
            </div>
        }

        <EditForm Model="submissionRequest" OnValidSubmit="HandleSubmit">
            <div class="mb-3">
                <label class="form-label">Your Answer:</label>
                <InputText @bind-Value="submissionRequest.Answer" class="form-control" placeholder="Enter your answer" />
                <small class="text-muted">Answer format: @challenge.AnswerFormat</small>
            </div>
            <button type="submit" class="btn btn-detective" disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Submit Answer
            </button>
        </EditForm>

        @if (progress != null && !progress.IsCompleted)
        {
            <div class="mt-3">
                <small class="text-muted">
                    Attempts: @progress.TotalAttempts | Hints used: @progress.HintsUsed
                </small>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Challenge? challenge;
    private UserProgress? progress;
    private SubmissionRequest submissionRequest = new() { Answer = "" };
    private SubmissionResult? submissionResult;
    private string? submissionMessage;
    private bool isSubmitting;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(userId))
        {
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        // Check if challenge is unlocked
        var isUnlocked = await UnlockService.IsChallengeUnlockedAsync(userId, Id);
        if (!isUnlocked)
        {
            Navigation.NavigateTo("/detective/inbox");
            return;
        }

        challenge = await ChallengeService.GetChallengeByIdAsync(Id);

        if (challenge == null)
        {
            Navigation.NavigateTo("/detective/inbox");
            return;
        }

        submissionRequest.ChallengeId = Id;
        progress = await ProgressService.GetChallengeProgressAsync(userId, Id);
    }

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(submissionRequest.Answer) || userId == null)
        {
            return;
        }

        isSubmitting = true;
        submissionMessage = null;

        try
        {
            submissionResult = await SubmissionService.SubmitAnswerAsync(userId, submissionRequest);
            submissionMessage = submissionResult.Message;

            progress = await ProgressService.GetChallengeProgressAsync(userId, Id);
            submissionRequest.Answer = "";
        }
        catch (Exception ex)
        {
            submissionMessage = $"Error submitting answer: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task OnHintViewed()
    {
        if (userId != null)
        {
            await ProgressService.IncrementHintUsageAsync(userId, Id);
            progress = await ProgressService.GetChallengeProgressAsync(userId, Id);
        }
    }
}
