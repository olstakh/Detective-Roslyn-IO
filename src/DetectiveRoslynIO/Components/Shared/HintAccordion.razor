@if (Hints != null && Hints.Any())
{
    <div class="accordion mb-3" id="hintsAccordion">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#hintsCollapse">
                    Hints (@Hints.Count available)
                </button>
            </h2>
            <div id="hintsCollapse" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <div class="alert alert-info">
                        <strong>Note:</strong> Using hints will be tracked in your progress.
                    </div>
                    @foreach (var hint in Hints.OrderBy(h => h.OrderIndex))
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Hint @hint.OrderIndex</h6>
                                <p class="card-text">@hint.Content</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<Hint>? Hints { get; set; }

    [Parameter]
    public EventCallback OnHintViewed { get; set; }
}
